<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BertScout2023.MainPage">

    <ScrollView
        BackgroundColor="White"
        >

        <VerticalStackLayout
            VerticalOptions="Start"
            >

            <HorizontalStackLayout
                HorizontalOptions="Center"
                >

                <Label
                    Text="Team:"
                    Margin="0,20,0,0"
                    />

                <Entry
                    x:Name="TeamNumber"
                    WidthRequest="70"
                    Keyboard="Numeric"
                    MaxLength="4"
                    Margin="4,10,0,0"
                    Text=""
                    IsEnabled="true"
                    />

                <Label
                    Text="Match:"
                    Margin="20,20,0,0"
                    />

                <Entry
                    x:Name="MatchNumber"
                    WidthRequest="60"
                    Keyboard="Numeric"
                    MaxLength="3"
                    Margin="4,10,0,0"
                    Text=""
                    IsEnabled="true"
                    />

                <Entry
                    x:Name="ScoutName"
                    Placeholder="enter name"
                    WidthRequest="160"
                    MaxLength="10"
                    Margin="30,10,0,0"
                    Text=""
                    IsEnabled="true"
                    />

                <Button
                    x:Name="Start"
                    Text="Start"
                    Clicked="Start_Clicked"
                    Margin="20,10,0,0"
                    />

            </HorizontalStackLayout>

            <VerticalStackLayout
                x:Name="FormBody"
                IsVisible="False">

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <HorizontalStackLayout
                    HorizontalOptions="Start">

                    <Label
                    Text="Autonomous"
                    Margin="0,0,0,0"
                    HorizontalTextAlignment="Center"
                    />

                </HorizontalStackLayout>

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <Label
                    Text="Teleoperated"
                    Margin="0,0,0,0"
                    HorizontalTextAlignment="Center"
                    />

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <Label
                    Text="Endgame"
                    Margin="0,0,0,0"
                    HorizontalTextAlignment="Center"
                    />

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <VerticalStackLayout
                    VerticalOptions="Start"
                    HeightRequest="100"
                   >

                    <Editor
                        x:Name="Comments"
                        Margin="0,0,0,0"
                        HeightRequest="100"
                        Placeholder="Comments"
                        VerticalOptions="Start"
                        HorizontalOptions="Fill"
                        HorizontalTextAlignment="Start"
                        MaxLength="135"
                        Text=""
                        IsEnabled="true"
                    />

                </VerticalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>