<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BertScout2023.MainPage">

    <ScrollView
        BackgroundColor="White"
        >

        <VerticalStackLayout
            VerticalOptions="Start"
            >

            <HorizontalStackLayout
                HorizontalOptions="Center"
                >

                <Label
                    Text="Team:"
                    />

                <Entry
                    x:Name="TeamNumber"
                    WidthRequest="100"
                    Keyboard="Numeric"
                    MaxLength="4"
                    Margin="4,10,0,0"
                    Text=""
                    IsEnabled="true"
                    />

                <Label
                    Text="Match:"
                    Margin="30,14,0,0"
                    />

                <Entry
                    x:Name="MatchNumber"
                    WidthRequest="80"
                    Keyboard="Numeric"
                    MaxLength="3"
                    Margin="4,10,0,0"
                    Text=""
                    IsEnabled="true"
                    />

                <Entry
                    x:Name="ScoutName"
                    Placeholder="Scout Name"
                    PlaceholderColor="LightGreen"
                    WidthRequest="200"
                    MaxLength="10"
                    Margin="30,10,0,0"
                    Text=""
                    IsEnabled="true"
                    />

                <Button
                    x:Name="Start"
                    Text="Start"
                    Clicked="Start_Clicked"
                    Margin="30,10,0,0"
                    />

            </HorizontalStackLayout>

            <VerticalStackLayout
                x:Name="FormBody"
                IsVisible="False">

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <HorizontalStackLayout
                    HorizontalOptions="Start">

                    <Label
                    Text="Autonomous"
                    Margin="0,0,0,0"
                    HorizontalTextAlignment="Center"
                    />

                </HorizontalStackLayout>

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <Label
                    Text="Teleoperated"
                    Margin="0,0,0,0"
                    HorizontalTextAlignment="Center"
                    />

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <Label
                    Text="Endgame"
                    Margin="0,0,0,0"
                    HorizontalTextAlignment="Center"
                    />

                <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="Green"
                    HeightRequest="1"
                    CornerRadius="0"
                    />

                <Entry
                    x:Name="Comment"
                    Margin="0,0,0,0"
                    HorizontalTextAlignment="Start"
                    Text=""
                    IsEnabled="true"
                    />

            </VerticalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
